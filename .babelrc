{
  "presets": ["es2015", "stage-0", "react"],
  "plugins": [
    "transform-decorators-legacy",
    "transform-class-properties",
    "transform-runtime",
    [
      "babel-root-import",
      [
        {
          "rootPathPrefix": "~",
          "rootPathSuffix": "."
        },
        {
          "rootPathPrefix": "@",
          "rootPathSuffix": "src"
        }
      ]
    ]
  ],
  "env": {
    "test": {
      "plugins": ["babel-plugin-transform-es2015-modules-commonjs"]
    }
  }
}
